<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/MAnImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/aa"
            app:civ_border_color="#03A9F4"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ManName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Steav jobs"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/MAnImg"
            app:layout_constraintTop_toTopOf="@+id/MAnImg" />

        <TextView
            android:id="@+id/MAnAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="age : 60"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/Networht"
            app:layout_constraintEnd_toEndOf="@+id/ManName"
            app:layout_constraintStart_toStartOf="@+id/ManName"
            app:layout_constraintTop_toBottomOf="@+id/ManName" />

        <TextView
            android:id="@+id/Networht"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="networht:5B$"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/MAnImg"
            app:layout_constraintEnd_toEndOf="@+id/MAnAge"
            app:layout_constraintStart_toStartOf="@+id/MAnAge" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>